# Deployment Environment Variables for ADO-AI Dependency Tracker
# Copy this file to .env when deploying

# Node Environment
NODE_ENV=production

# OpenAI API Key (required for AI analysis features)
# Get your API key from https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Deployment Settings
PORT=5000
HOST=0.0.0.0

# Database Settings (if using external database)
# DATABASE_URL=postgresql://user:password@hostname:port/database

# Application Settings
LOG_LEVEL=info
ENABLE_DEMO_MODE=false
ENABLE_PHYSICS_SIMULATION=true

# Cache Settings
CACHE_TTL=3600000  # 1 hour in milliseconds

# Security Settings
CORS_ORIGIN=*